#!/bin/bash

source <%= "#{node.elasticsearch[:path][:conf]}/elasticsearch-env.sh" %>
<%= "export JAVA_HOME" if node.elasticsearch[:java_home] -%>
export ES_HOME
export ES_CLASSPATH
export ES_HEAP_SIZE

export ES_JAVA_OPTS
exec chpst -u <%= node[:elasticsearch][:user] %> /usr/local/bin/elasticsearch -f
